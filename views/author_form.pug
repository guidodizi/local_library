extends layout

block content
  h1 #{title}
  
  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#name.form-control(type='text', placeholder='First Name (John)', name='first_name', value=(author === undefined ? '' : author.first_name))
   
      label(for='family_name') Family Name:
      input#name.form-control(type='text', placeholder='Surname (Resig)', name='family_name', value=(author === undefined ? '' : author.family_name))
    
    div.form-group
      label(for='date_of_birth') Date of Birth:
      input#name.form-control(type='date', name='date_of_birth', value=(author === undefined ? '' : author.date_of_birth_yyyy_mm_dd))
      label(for='date_of_death') Date of Death:
      input#name.form-control(type='date', name='date_of_death', value=(author === undefined ? '' : author.date_of_death_yyyy_mm_dd))
    
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg